{
  "name": "hass-lego",
  "version": "1.3.2",
  "type": "module",
  "description": "",
  "main": "./dist/src/index.js",
  "files": [
    "dist/src",
    "dist/hass-lego.d.ts"
  ],
  "types": "dist/hass-lego.d.ts",
  "exports": {
    "types": "./dist/hass-lego.d.ts",
    "default": "./dist/src/index.js"
  },
  "scripts": {
    "build:js": "swc src --out-dir dist",
    "build:types": "tsc --project tsconfig.dist.json",
    "build:api-rollup": "npm run build:types && tsconfig-replace-paths --project tsconfig.dist.json && vite-node ./src/tools/generate-api-report.ts",
    "clear:dist": "rm -rf dist",
    "build": "npm run clear:dist && npm run build:js && npm run build:api-rollup",
    "watch": "npm-watch"
  },
  "watch": {
    "build": {
      "clearBuffer": true,
      "patterns": "./**/*",
      "extensions": [
        "ts",
        "json"
      ],
      "ignore": [
        "api/**/*",
        "dist/**/*",
        ".swc/**/*",
        "temp/**/*",
        ".vscode/**/*",
        ".github/**/*"
      ]
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@microsoft/api-extractor": "^7.47.7",
    "@swc/plugin-transform-imports": "3.0.2",
    "@types/node": "22.5.4",
    "@types/react": "^18.3.5",
    "@types/uuid": "^10.0.0",
    "dotenv": "^16.4.5",
    "homeassistant-ws": "^0.2.3",
    "ink": "^5.0.1",
    "npm-watch": "^0.13.0",
    "react": "^18.3.1",
    "tsconfig-replace-paths": "^0.0.14",
    "typescript": "5.5.4",
    "uuid": "^10.0.0",
    "vite-node": "^2.0.5",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "2.0.5"
  },
  "devDependencies": {
    "@swc/cli": "0.4.0",
    "@swc/core": "1.7.24"
  }
}
