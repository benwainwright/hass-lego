{
  "name": "hass-lego",
  "version": "1.19.1",
  "type": "module",
  "description": "",
  "main": "./dist/src/index.js",
  "files": [
    "dist/src",
    "dist/hass-lego.d.ts"
  ],
  "types": "dist/hass-lego.d.ts",
  "exports": {
    "types": "./dist/hass-lego.d.ts",
    "default": "./dist/src/index.js"
  },
  "scripts": {
    "format": "prettier --write .",
    "test": "vitest",
    "test:ci": "vitest --coverage",
    "test:ui": "vitest --watch --ui --coverage",
    "test:watch": "vitest --watch --allowOnly",
    "types": "tsc",
    "types:watch": "tsc --watch",
    "lint": "eslint .",
    "build:js": "swc src --out-dir dist",
    "build:types": "tsc --project tsconfig.dist.json",
    "build:api-rollup": "npm run build:types && tsconfig-replace-paths --project tsconfig.dist.json && vite-node ./src/tools/generate-api-report.ts",
    "clear:dist": "rm -rf dist",
    "build": "npm run clear:dist && npm run build:js && npm run build:api-rollup",
    "watch": "npm-watch"
  },
  "watch": {
    "build": {
      "clearBuffer": true,
      "patterns": "./**/*",
      "extensions": [
        "ts",
        "json"
      ],
      "ignore": [
        "api/**/*",
        "dist/**/*",
        ".swc/**/*",
        "temp/**/*",
        ".vscode/**/*",
        ".github/**/*"
      ]
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "homeassistant-typescript": "1.6.1",
    "homeassistant-ws": "0.2.3",
    "ink": "5.0.1",
    "ink-spinner": "5.0.0",
    "ink-table": "3.1.0",
    "queue-typescript": "1.0.1",
    "react": "18.3.1",
    "socket.io": "4.7.5",
    "socket.io-client": "4.8.1",
    "uuid": "10.0.0",
    "ws": "8.18.0"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "7.52.3",
    "@swc/cli": "0.7.2",
    "@swc/core": "1.11.21",
    "@swc/plugin-transform-imports": "7.0.3",
    "@types/node": "22.14.1",
    "@types/react": "18.3.5",
    "@types/uuid": "10.0.0",
    "@types/ws": "8.18.1",
    "@typescript-eslint/eslint-plugin": "8.30.1",
    "@vitest/coverage-v8": "3.1.1",
    "@vitest/ui": "3.1.1",
    "dotenv": "16.5.0",
    "eslint": "9.24.0",
    "eslint-plugin-filenames": "1.3.2",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsdoc": "50.6.9",
    "eslint-plugin-no-relative-import-paths": "1.6.1",
    "globals": "16.0.0",
    "npm-watch": "0.13.0",
    "prettier": "3.5.3",
    "tsconfig-replace-paths": "0.0.14",
    "typescript": "5.8.3",
    "vite": "5.4.10",
    "vite-node": "2.0.5",
    "vite-tsconfig-paths": "5.0.1",
    "vitest": "3.1.1",
    "vitest-mock-extended": "3.1.0",
    "vitest-when": "0.6.0"
  }
}
