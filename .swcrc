{
  "exclude": "node_modules/",
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "topLevelAwait": true
    },
    "target": "esnext",
    "baseUrl": ".",
    "experimental": {
      "plugins": [
        [
          "@swc/plugin-transform-imports",
          {
            "^(.*?)(\\.ts)$": {
              "skipDefaultConversion": true,
              "transform": "{{matches.[1]}}.js"
            }
          }
        ]
      ]
    },

    "paths": {
      "@core": ["./src/core/index.ts"],
      "@types": ["./src/types/index.ts"],
      "@utils": ["./src/types/utils.ts"]
    }
  },
  "module": {
    "type": "nodenext"
  }
}
